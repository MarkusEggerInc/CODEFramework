<Grid x:Class="CODE.Framework.Wpf.Theme.Vapor.Standard.LargeImage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Height="180" Width="350" Margin="30,15"
      ToolTip="{Binding ToolTipText}">
    <Grid.Effect>
        <DropShadowEffect />
    </Grid.Effect>
    
    <!-- Main Content -->
    <Rectangle Fill="{Binding Image1}" RadiusX="10" RadiusY="10" />

    <Border HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Bottom" Background="#CD000000" CornerRadius="0,0,10,10">
        <TextBlock Text="{Binding Text1}" 
                   TextAlignment="Center" 
                   TextWrapping="Wrap"    
                   Margin="15,0,15,5"
                   Foreground="{DynamicResource CODE.Framework-Application-ThemeBrush2}" 
                   FontFamily="{DynamicResource DefaultFont}" 
                   FontSize="{DynamicResource FontSize-Largest}"
                   FontWeight="Bold"/>
    </Border>

</Grid>

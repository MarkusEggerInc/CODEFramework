<Grid x:Class="CODE.Framework.Wpf.Theme.Newsroom.StandardViews.Notifications"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel VerticalAlignment="Top" Height="110">
        <TextBlock Text="{Binding Text1}" TextAlignment="Center" Margin="0,4,0,0"
                   FontFamily="{DynamicResource DefaultFont}" 
                   FontSize="{DynamicResource FontSize-VeryLarge}" 
                   FontWeight="Bold"
                   TextWrapping="NoWrap"
                   Foreground="White">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="2"/>
            </TextBlock.Effect>
        </TextBlock>
        <TextBlock Text="{Binding Text2}" TextAlignment="Center"
                   FontFamily="{DynamicResource DefaultFont}" 
                   FontSize="{DynamicResource FontSize-Largest}" 
                   TextWrapping="NoWrap"
                   Foreground="White">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="2"/>
            </TextBlock.Effect>
        </TextBlock>
    </StackPanel>

</Grid>

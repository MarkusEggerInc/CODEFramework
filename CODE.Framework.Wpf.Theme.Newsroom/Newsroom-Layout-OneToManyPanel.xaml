<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:layout="clr-namespace:CODE.Framework.Wpf.Layout;assembly=CODE.Framework.Wpf">

    <Style TargetType="layout:OneToManyPanel">
        <Setter Property="Orientation" Value="Vertical" />
        <Setter Property="CaptionFontFamily" Value="{DynamicResource DefaultFont}" />
        <Setter Property="CaptionFontSize" Value="{DynamicResource FontSize-Largest}" />
        <Setter Property="CaptionFontWeight" Value="Light" />
        <Setter Property="CaptionForegroundBrush" Value="{DynamicResource CODE.Framework-Application-ForegroundBrush1}" />
    </Style>

</ResourceDictionary>
            <Rectangle Fill="Orange" Layout:MetroTiles.TileWidthMode="Normal" />
            <Rectangle Fill="Orange" Layout:MetroTiles.TileWidthMode="Normal" />
            <Rectangle Fill="Orange" />
            <Rectangle Fill="Orange" />
            <Rectangle Fill="Orange" Layout:MetroTiles.TileWidthMode="Double" />
            <Rectangle Fill="Orange" />
            <Rectangle Fill="Orange" />
            <Rectangle Fill="Red" />
            <Rectangle Fill="Orange" Layout:MetroTiles.TileWidthMode="Double" />
            <Rectangle Fill="Orange" />
            <Rectangle Fill="Orange" />
            <Rectangle Fill="Orange" />
            <Rectangle Fill="Orange" />
            <Rectangle Fill="Orange" />
            <!--<Rectangle Fill="Orange" />-->

            <Rectangle Layout:MetroTiles.GroupTitle="Group 2" Fill="Orange" />
            <Rectangle Layout:MetroTiles.GroupTitle="Group 2" Fill="Orange" />
            <Rectangle Layout:MetroTiles.GroupTitle="Group 2" Fill="Orange" />
            <Rectangle Layout:MetroTiles.GroupTitle="Group 2" Fill="Orange" />
            <Rectangle Layout:MetroTiles.GroupTitle="Group 2" Fill="Orange" Layout:MetroTiles.TileWidthMode="Double" />
            <Rectangle Layout:MetroTiles.GroupTitle="Group 2" Fill="Orange" />
            <Rectangle Layout:MetroTiles.GroupTitle="Group 2" Fill="Orange" />
            <Rectangle Layout:MetroTiles.GroupTitle="Group 2" Fill="Red" />
            <Rectangle Layout:MetroTiles.GroupTitle="Group 2" Fill="Orange" Layout:MetroTiles.TileWidthMode="Double" />
            <Rectangle Layout:MetroTiles.GroupTitle="Group 2" Fill="Orange" />
            <Rectangle Layout:MetroTiles.GroupTitle="Group 2" Fill="Orange" />
            <Rectangle Layout:MetroTiles.GroupTitle="Group 2" Fill="Orange" />
            <Rectangle Layout:MetroTiles.GroupTitle="Group 2" Fill="Orange" />
            <Rectangle Layout:MetroTiles.GroupTitle="Group 2" Fill="Orange" />
            <Rectangle Layout:MetroTiles.GroupTitle="Group 2" Fill="Orange" />

            <Rectangle Layout:MetroTiles.GroupTitle="Group 3" Fill="Orange" />
            <Rectangle Layout:MetroTiles.GroupTitle="Group 3" Fill="Orange" />
            <Rectangle Layout:MetroTiles.GroupTitle="Group 3" Fill="Orange" />
            <Rectangle Layout:MetroTiles.GroupTitle="Group 3" Fill="Orange" />
        </Layout:MetroTiles>
        </ScrollViewer>
    </Grid>

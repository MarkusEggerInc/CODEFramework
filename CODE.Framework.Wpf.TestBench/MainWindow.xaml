                <Rectangle Fill="Red" />
                <Rectangle Fill="Blue" l:MetroTiles.TileWidthMode="DoubleSquare" />
                <Rectangle Fill="Red" l:MetroTiles.TileWidthMode="Double" />
                <Rectangle Fill="Beige" l:MetroTiles.TileWidthMode="Tiny" />
                <Rectangle Fill="Beige" l:MetroTiles.TileWidthMode="Tiny" />
                <Rectangle Fill="Beige" l:MetroTiles.TileWidthMode="Tiny" />
                <Rectangle Fill="Beige" l:MetroTiles.TileWidthMode="Tiny" />
                <Rectangle Fill="Beige" l:MetroTiles.TileWidthMode="Tiny" />
                <Rectangle Fill="Orange" l:MetroTiles.TileWidthMode="Normal" />
                <Rectangle Fill="Red" />
                <Rectangle Fill="Beige" l:MetroTiles.TileWidthMode="Tiny" />
                <Rectangle Fill="Beige" l:MetroTiles.TileWidthMode="Tiny" />
                <Rectangle Fill="Beige" l:MetroTiles.TileWidthMode="Tiny" />
                <Rectangle Fill="Beige" l:MetroTiles.TileWidthMode="Tiny" />
                <Rectangle Fill="Orange" l:MetroTiles.TileWidthMode="Normal" />
                <Rectangle Fill="Beige" l:MetroTiles.TileWidthMode="Tiny" />
                <Rectangle Fill="Beige" l:MetroTiles.TileWidthMode="Tiny" />
                <Rectangle Fill="Red" />
                <Rectangle Fill="Orange" l:MetroTiles.TileWidthMode="Normal" />
                <Rectangle Fill="Beige" l:MetroTiles.TileWidthMode="Tiny" />
                <Rectangle Fill="Beige" l:MetroTiles.TileWidthMode="Tiny" />
                <Rectangle Fill="Beige" l:MetroTiles.TileWidthMode="Tiny" />
                <Rectangle Fill="Beige" l:MetroTiles.TileWidthMode="Tiny" />
                <Rectangle Fill="Blue" l:MetroTiles.TileWidthMode="DoubleSquare" />
                <Rectangle Fill="Beige" l:MetroTiles.TileWidthMode="Tiny" />
                <Rectangle Fill="Beige" l:MetroTiles.TileWidthMode="Tiny" />
                <Rectangle Fill="Beige" l:MetroTiles.TileWidthMode="Tiny" />
                <Rectangle Fill="Orange" l:MetroTiles.TileWidthMode="Normal" />

                <Rectangle l:MetroTiles.GroupTitle="Group 2" Fill="Orange" />
                <Rectangle l:MetroTiles.GroupTitle="Group 2" Fill="Orange" />
                <Rectangle l:MetroTiles.GroupTitle="Group 2" Fill="Orange" />
                <Rectangle l:MetroTiles.GroupTitle="Group 2" Fill="Orange" />
                <Rectangle l:MetroTiles.GroupTitle="Group 2" Fill="Orange" l:MetroTiles.TileWidthMode="Double" />
                <Rectangle l:MetroTiles.GroupTitle="Group 2" Fill="Orange" />
                <Rectangle l:MetroTiles.GroupTitle="Group 2" Fill="Orange" />
                <Rectangle l:MetroTiles.GroupTitle="Group 2" Fill="Red" />
                <Rectangle l:MetroTiles.GroupTitle="Group 2" Fill="Orange" l:MetroTiles.TileWidthMode="Double" />
                <Rectangle l:MetroTiles.GroupTitle="Group 2" Fill="Orange" />
                <Rectangle l:MetroTiles.GroupTitle="Group 2" Fill="Orange" />
                <Rectangle l:MetroTiles.GroupTitle="Group 2" Fill="Orange" />
                <Rectangle l:MetroTiles.GroupTitle="Group 2" Fill="Orange" />

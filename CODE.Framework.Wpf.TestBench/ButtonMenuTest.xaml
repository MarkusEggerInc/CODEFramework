        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Height="Auto" Margin="20">
            <mvvm:ViewActionMenuButton Model="{Binding .}" ModelActionsBindingPath="MyActions" Content="Menu" Height="30" Width="75" />

<Window x:Class="CODE.Framework.Wpf.TestBench.BiStackTest2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:l="clr-namespace:CODE.Framework.Wpf.Layout;assembly=CODE.Framework.Wpf"
        Title="BiStackTest2" Height="300" Width="300">
    <Grid>
        <l:BidirectionalStackPanel LastTopItemFillsSpace="True" Orientation="Horizontal">
            <Button Click="ButtonBase_OnClick">Add Item</Button>
            <ItemsControl x:Name="list"/>
            <Rectangle Fill="Green" MinWidth="50"/>
            <Rectangle HorizontalAlignment="Right" Fill="Blue" Width="150"/>
        </l:BidirectionalStackPanel>
    </Grid>
</Window>

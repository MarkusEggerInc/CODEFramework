<Window x:Class="CODE.Framework.Wpf.TestBench.SpellCheck"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:CODE.Framework.Wpf.Controls;assembly=CODE.Framework.Wpf"
        Title="SpellCheck" Height="300" Width="300">
    <Grid controls:GridEx.RowHeights="Auto,Auto,Auto,Auto,Auto,*">
        <Label Background="AliceBlue">TextBoxEx:</Label>
        <TextBox controls:TextBoxEx.UseCustomDictionaries="True" 
                 Margin="5" 
                 Grid.Row="1">This is a mispelling</TextBox>

        <Label Grid.Row="2" Background="AliceBlue">TextBoxEx:</Label>
        <TextBox controls:TextBoxEx.UseCustomDictionaries="True" 
                 Margin="5" 
                 Grid.Row="3">This is a mispelling</TextBox>

        <Label Grid.Row="4" Background="AliceBlue">RichTextBoxEx:</Label>
        <controls:RichTextBoxEx controls:TextBoxEx.UseCustomDictionaries="True" 
                                Margin="5" 
                                Grid.Row="5" />
    </Grid>
</Window>

<UserControl x:Class="CODE.Framework.Wpf.TestBench.FontControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Margin="0,0,5,0">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <ComboBox Width="100"/>
            <ComboBox Width="30"/>
            <Button Margin="5,0,0,0" Width="30">A</Button>
            <Button Width="30">a</Button>
        </StackPanel>
        <StackPanel  Margin="0,5,0,0" Orientation="Horizontal">
            <Button Width="30" FontWeight="Bold">B</Button>
            <Button Width="30" FontStyle="Italic">I</Button>
            <Button Width="30"><Underline>U</Underline></Button>
        </StackPanel>
    </StackPanel>
</UserControl>

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <FontFamily x:Key="DefaultFont">Segoe UI</FontFamily>

    <system:Double x:Key="FontSize-Smallest">8</system:Double>
    <system:Double x:Key="FontSize-Smaller">11</system:Double>
    <system:Double x:Key="FontSize-Normal">13.333</system:Double>
    <system:Double x:Key="FontSize-Large">15</system:Double>
    <system:Double x:Key="FontSize-Larger">18</system:Double>
    <system:Double x:Key="FontSize-Largest">24</system:Double>
    <system:Double x:Key="FontSize-VeryLarge">36</system:Double>

</ResourceDictionary>
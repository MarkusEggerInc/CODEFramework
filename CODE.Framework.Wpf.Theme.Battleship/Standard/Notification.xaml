<Grid x:Class="CODE.Framework.Wpf.Theme.Battleship.Standard.Notification"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{x:Null}"
      VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
      ToolTip="{Binding ToolTipText}">

    <!-- Main Content -->
    <StackPanel VerticalAlignment="Top" MaxHeight="115" Margin="0">
        <TextBlock Text="{Binding Text1}" 
                   FontFamily="{DynamicResource DefaultFont}"
                   FontWeight="Light"
                   FontSize="{DynamicResource FontSize-Larger}" 
                   TextWrapping="NoWrap" Margin="0"
                   Foreground="{DynamicResource CODE.Framework-Application-StandardViewModelForegroundBrush}" />
        <TextBlock Text="{Binding Text2}" 
                   FontFamily="{DynamicResource DefaultFont}" 
                   FontSize="{DynamicResource FontSize-Normal}" 
                   TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Margin="0,5,0,0"
                   Foreground="{DynamicResource CODE.Framework-Application-StandardViewModelForegroundBrush}" />
    </StackPanel>

</Grid>

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:layout="clr-namespace:CODE.Framework.Wpf.Layout;assembly=CODE.Framework.Wpf">

    <Style TargetType="layout:PropertySheet">
        <Setter Property="Padding" Value="2"/>
        <Setter Property="GroupHeaderRenderer">
            <Setter.Value>
                <layout:PropertySheetHeaderRenderer Background="{DynamicResource CODE.Framework-Application-BackgroundBrush2}"
                                                    Foreground="{DynamicResource CODE.Framework-Application-ThemeBrush1}"
                                                    FontSize="{DynamicResource FontSize-Larger}"
                                                    FontWeight="Light"
                                                    FontFamily="{DynamicResource DefaultFont}"/>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>